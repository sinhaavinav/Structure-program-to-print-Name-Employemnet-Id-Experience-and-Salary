#include<stdio.h>
#include<conio.h>
struct employee
{
 char name[20];
 int eid,sal,exp;
 clrscr();
};
void main()
{
 int n,i;
 struct employee e[10];
 printf("enter the number of employees");
 scanf("%d",&n);
 printf("enter the employees details one by one\n");
 for(i=0;i<n;i++)
 {
 printf("\nenter the name\n");
 scanf("%c",&name);
 printf("\nenter the  eid\n");
 scanf("%d",&eid);
 printf("\nenter the salary\n");
 scanf("%d",&sal);
 printf("\nenter the experience\n");
 scanf("%d",&exp);
 }
 scanf("%d",&e[i]);
 printf("Employee Details are given below\n");
 for(i=0;i<n;i++)
 {
  printf("%c\n",name);
  printf("%d\n",eid);
  printf("%d\n",sal);
  printf("%d\n",exp);
  }
  getch();
 }
